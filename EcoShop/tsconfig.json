{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "*": ["*", "node_modules/*"]
    },
    "outDir": "dist",
    "sourceMap": true
  },
  "include": [".eslintrc.js", "src/**/*.tsx", "server/**/*.ts", "database/**/*.ts", "run-server.ts"]
}